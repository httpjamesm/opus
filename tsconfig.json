{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
        "@pages/*": [
            "src/pages/*.tsx",
        ],
        "@styles/*": [
            "src/styles/*.scss",
        ],
        "@components/*": [
            "src/components/*.tsx",
        ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
